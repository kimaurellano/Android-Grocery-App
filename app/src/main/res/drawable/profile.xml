<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <ripple android:color="#FFF"
            android:radius="70dp">
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/primaryColor" />
                    <corners android:radius="5dp" />
                </shape>
            </item>
        </ripple>
    </item>

    <item android:drawable="@drawable/ic_profile"
        android:top="15dp"
        android:bottom="15dp"
        android:right="15dp"
        android:left="15dp"/>
</layer-list>